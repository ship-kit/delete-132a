{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "inlineSources": false,
    "sourceMap": false,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@payload-config": [
        "./src/payload.config.ts"
      ],
      "@/public/*": [
        "./public/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    ".config/eslint.config.mjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.mts",
    "**/*.md",
    "**/*.mdx",
    ".next/types/**/*.ts",
    "src/types/next-auth.d.ts",
    "next.config.ts",
    "src/workers/**/*",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    ".next",
    "node_modules",
    "tests",
    "public",
    "packages",
    "debug/**/*.ts",
    "src/app/(app)/(demo)/examples/**/*",
    "src/workers/**/*.ts"
  ]
}
